{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "noEmitOnError": false,
    "sourceMap": false,
    "declarationMap": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "coverage", "test"]
}
