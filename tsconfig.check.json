{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": false,
    "types": ["vitest/globals", "node"],
    "verbatimModuleSyntax": false
  },
  "include": ["test/**/*.mts", "src/**/*.ts"]
}
